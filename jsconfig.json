{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "lib": ["ESNext"],
  "include": ["client", "packages", "server"],
  "exclude": ["node_modules", "**/node_modules/*", "dist", "dist-*"]
}
